<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ookmm.habittracker.AddNewHabitActivity">

    <TextView
        android:text="@string/habit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/newHabitNameTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Habit Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newHabitNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/newHabitDateTextView"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/habit_name_hint"
        android:inputType="text"
        android:ems="10"
        android:gravity="top"
        android:id="@+id/newHabitNameEditText"
        tools:ignore="LabelFor"
        android:layout_below="@+id/newHabitNameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/enteredDateEditText"
        android:layout_below="@+id/newHabitDateTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Pick Occurrence Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/pickOccurrenceDayTextView"
        android:layout_below="@+id/enteredDateEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tuesdayCheckBox"
        android:layout_below="@+id/mondayCheckBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tuesdayCheckBox"
        android:layout_alignParentStart="true"
        android:id="@+id/wednesdayCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wednesdayCheckBox"
        android:layout_alignParentStart="true"
        android:id="@+id/thursdayCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thursdayCheckBox"
        android:layout_alignParentStart="true"
        android:id="@+id/fridayCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fridayCheckBox"
        android:layout_alignParentStart="true"
        android:id="@+id/saturdayCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saturdayCheckBox"
        android:layout_alignParentStart="true"
        android:id="@+id/sundayCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mondayCheckBox"
        android:layout_below="@+id/pickOccurrenceDayTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/clearNewEntryButton" />

    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clearNewEntryButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/saveNewEntryButton" />

</RelativeLayout>
